#include <iostream>
using namespace std;

// Asks user to input number of month
int main() {
    int month;
    cout << "Enter the number of the month in the year (1-12) then you will be given the amount of days in that month: ";
    cin >> month;

    switch (month) {
        case 1: // January
            cout << "January has 31 days." << endl;
            break;
        case 2: // February
            cout << "February usually has 28 days, on a leap year it has 29 days." << endl;
            break;
        case 3: // March
            cout << "March has 31 days." << endl;
            break;
        case 4: // April
            cout << "April has 30 days." << endl;
            break;
        case 5: // May
            cout << "May has 31 days." << endl;
            break;
        case 6: // June
            cout << "June has 30 days." << endl;
            break;
        case 7: // July
            cout << "July has 31 days." << endl;
            break;
        case 8: // August
            cout << "August has 31 days." << endl;
            break;
        case 9: // September
            cout << "September has 30 days." << endl;
            break;
        case 10: // October
            cout << "October has 31 days." << endl;
            break;
        case 11: // November
            cout << "November has 30 days." << endl;
            break;
        case 12: // December
            cout << "December has 31 days." << endl;
            break;
        default: // If input of month number was not 1-12
            cout << "Invalid input. Please enter a number corresponding to the month of the year from 1 to 12." << endl;
    }

    return 0;
}
